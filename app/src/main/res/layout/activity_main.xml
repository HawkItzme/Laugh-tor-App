<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_back"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Actor's Laugh"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/srk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/red"
        android:tag="srk"
        android:onClick="ActorLaugh"
        android:text="Shah Rukh Khan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/akshay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:tag="akshay"
        android:text="Akshay Kumar"
        android:onClick="ActorLaugh"
        android:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="@+id/srk"
        app:layout_constraintStart_toStartOf="@+id/srk"
        app:layout_constraintTop_toBottomOf="@+id/srk" />

    <Button
        android:id="@+id/salman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/green"
        android:tag="salman"
        android:onClick="ActorLaugh"
        android:text="Salman Khan"
        app:layout_constraintEnd_toEndOf="@+id/srk"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/srk"
        app:layout_constraintTop_toBottomOf="@+id/srk" />

    <Button
        android:id="@+id/amitabh"
        android:onClick="ActorLaugh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:backgroundTint="@color/purple_700"
        android:tag="puneet"
        android:text="Puneet Sup"
        app:layout_constraintEnd_toEndOf="@+id/srk"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/srk"
        app:layout_constraintTop_toBottomOf="@+id/srk" />


</androidx.constraintlayout.widget.ConstraintLayout>